<Window x:Class="HotKeyNew.MiniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotKeyNew"
        mc:Ignorable="d"
        Title="이미지 선택" Height="380" Width="850"
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Topmost="True" ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Border Background="#F0F0F0" BorderBrush="#888" BorderThickness="2" CornerRadius="8">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 안내 문구 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="F1~F12 키를 눌러 이미지를 클립보드에 복사하세요"
                           FontSize="14" FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="ESC: 취소"
                           FontSize="11" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- F1~F12 이미지 그리드 -->
            <ItemsControl Grid.Row="1" Name="HotkeyItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="6"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCC" BorderThickness="1" 
                                Background="White" CornerRadius="5" Margin="5">
                            <StackPanel Margin="5">
                                <!-- F키 이름 -->
                                <TextBlock Text="{Binding KeyName}" 
                                           FontWeight="Bold" FontSize="14"
                                           HorizontalAlignment="Center"
                                           Margin="0,2,0,3"/>

                                <!-- 이미지 영역 (충분히 크게) -->
                                <Border Width="115" Height="115" 
                                        Background="#F5F5F5" 
                                        CornerRadius="3">
                                    <Image Source="{Binding AssignedImage.ImageSource}" 
                                           Stretch="Uniform"/>
                                </Border>

                                <!-- 파일명 -->
                                <TextBlock Text="{Binding ImageName}" 
                                           FontSize="9" 
                                           TextTrimming="CharacterEllipsis"
                                           HorizontalAlignment="Center"
                                           Foreground="Gray"
                                           MaxWidth="115"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>