<Window x:Class="HotKeyNew.HotkeySelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="F키 선택" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 안내 문구 -->
        <TextBlock Grid.Row="0" 
                   Text="할당할 F키를 선택하세요"
                   FontSize="14" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <!-- F1~F12 버튼 그리드 -->
        <UniformGrid Grid.Row="1" Rows="3" Columns="4" 
                     HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="F1" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="0"/>
            <Button Content="F2" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="1"/>
            <Button Content="F3" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="2"/>
            <Button Content="F4" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="3"/>
            <Button Content="F5" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="4"/>
            <Button Content="F6" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="5"/>
            <Button Content="F7" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="6"/>
            <Button Content="F8" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="7"/>
            <Button Content="F9" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="8"/>
            <Button Content="F10" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="9"/>
            <Button Content="F11" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="10"/>
            <Button Content="F12" Width="80" Height="50" Margin="5" Click="FKeyButton_Click" Tag="11"/>
        </UniformGrid>

        <!-- 취소 버튼 -->
        <Button Grid.Row="2" Content="취소" Width="100" Height="30"
                HorizontalAlignment="Center" Margin="0,15,0,0"
                Click="CancelButton_Click"/>
    </Grid>
</Window>